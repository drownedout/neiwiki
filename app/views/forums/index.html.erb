<%= link_to "Create A New Forum", new_forum_path, class: "btn btn-primary" %>

<% @forums.each do |forum| %>
	<div class="row">
		<div class="col-md-12">
			<h3><%= link_to forum.title, forum, class: "article_index_title" %></h3>
				<p>
					<strong>Created by:</strong>
					<%= forum.user.firstname %>
					<%= forum.user.lastname %>
				</p>
			<div class="row">
				<div class="col-md-3">
					<p><strong>Created On:</strong> <%= forum.created_at.strftime('%b %d %Y') %></p>
				</div>
				<div class="col-md-3">
					<p><strong>Updated At:</strong> <%= forum.updated_at.strftime('%b %d %Y') %></p>
				</div>
			</div>
			<p><%= forum.content %></p>
		</div>
	</div>
<% end %>