<%= form_for(@user) do |f| %>
  <div class="field-body">
    <div class="field">
      <%= f.label :firstname, class: "form-label"  %>
      <%= f.text_field :firstname, autofocus: true, required: true, class: "form-input" %>
    </div>

    <div class="field">
      <%= f.label :lastname, class: "form-label"  %>
      <%= f.text_field :lastname, autofocus: true, required: true, class: "form-input"  %>
    </div>


    <div class="field">
      <%= f.label :email, class: "form-label" %>
      <%= f.email_field :email, autofocus: true, required: true, class: "form-input" %>
    </div>

    <div class="field">
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %><br />
      <%= f.label :password, class: "form-label" %>
      <%= f.password_field :password, autocomplete: "off", class: "form-input" %>
    </div>

    <div class="field">
      <%= f.label :password_confirmation, class: "form-label"  %>
      <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-input" %>
    </div>

    <div class="actions">
      <%= f.submit "Create User", class: "btn btn-primary" %>
    </div>
  </div>
<% end %>