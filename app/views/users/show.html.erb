<div class="profile_wrapper">
	<div class="row">
		<div class="col-md-1">
			<%=image_tag('default-avatar.png', class: "profile_thumbnail") %>
		</div>
		<div class="col-md-11">
			<h1><%= @user.full_name %></h1>
			<!--<p>Member since <%= @user.created_at.strftime('%b %d, %Y') %></p> -->
		</div>
	</div>

	<ul class="user-navbar">
	  <li onclick="tabs('user-articles');"><p>Articles</p></li>
	  <li onclick="tabs('user-article-comments');"><p>Article Comments</p></li>
	  <li onclick="tabs('user-forums');"><p>Forums</p></li>
	  <li onclick="tabs('user-forum-comments');"><p>Forums Comments</p></li>
	</ul>

	<div id="user-articles" class="dashboard-div">
		<%= render 'articles' %>
	</div>

	<div id="user-article-comments" class="dashboard-div">
		<%= render 'article_comments' %>
	</div>

	<div id="user-forums" class="dashboard-div">
		<%= render 'forums' %>
	</div>

	<div id="user-forum-comments" class="dashboard-div">
		<%= render 'forum_comments' %>
	</div>

</div>
<script>
	tabs('user-articles');
</script>