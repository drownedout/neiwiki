<div class="row home_title_row">
	<div class="col-md-4 home_row">
		<h4 class="home_title"><%= @user.firstname %>'s Article Comments (<%= @user.comments.count %>)</h4>
	</div>
</div>
<% if @user.comments.any? %>
	<% @user.comments.each do |comment| %>
		<div class="comment">
			<h4><%= comment.article.title %></h4>
			<p class="comment_time"><%=comment.created_at.strftime('%b %d, %Y') %></p>
			<p><%= comment.body %></p>
		</div>
	<% end %>
<% else %>
	<p><%= @user.firstname %> has not written any comments yet.</p>
<% end %>