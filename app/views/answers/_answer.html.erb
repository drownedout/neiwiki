<div class="comment">
	<div class="row">
		<div class="col-md-1">
			<%= link_to image_tag(answer.user.profile_picture.url(:medium), class: "profile_thumbnail user_profile_thumbnail"), contributor_path(answer.user) %>
		</div>
		<div class="col-md-10">
			<h4 class="comment_name"><%= answer.user.full_name %></h4>
		</div>
	</div> <!-- row -->
	<p class="comment_time"><%= time_ago_in_words(answer.created_at) %> Ago </p>
	<p><%= answer.body %></p>
	<% if user_signed_in? %>
		<% if current_user.id == answer.user_id %>
			<p><%= link_to 'Delete', [answer.forum, answer], method: :delete, data: { confirm: "Are you sure?"} %></p>
		<% end %>
		<%= link_to "Report Comment", flagged_forum_answer_path(answer.forum, answer), data: {confirm: "Are you sure?"} %>
	<% end %>
</div>
