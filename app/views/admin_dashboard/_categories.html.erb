<table class="table">
	<thead>
		<tr>
			<th>ID</th>
			<th>Name</th>
			<th>Edit</th>
			<th>Delete</th>
		</tr>
	</thead>
	<tbody>
		<% @categories.each do |category| %>
			<tr>
				<td><%= category.id %></td>
				<td><%= category.name %></td>
				<td><%= link_to "", edit_category_path(category), class: 'glyphicon glyphicon-pencil' %></td>
				<td><%= link_to "", category_path(category), method: :delete, class: 'glyphicon glyphicon-trash'%></td>
			</tr>
		<% end %>
	</tbody>
</table>