<h1><%= current_user.firstname %> <%=current_user.lastname %></h1>
<%= link_to "Edit Profile", edit_user_registration_path %>

<div class="row home_title_row">
	<div class="col-md-4 home_row">
		<h4 class="home_title">My Articles</h4>
	</div>
</div>

<div class="row">
	<% current_user.articles.each do |article| %>
		<div class="col-md-6 profile_block">
			<h4><%= link_to article.title, article, class: "article_home_title" %></h4>
			<div class="row">
				<div class="col-md-6">
					<p><%= article.created_at.strftime('%b %d, %Y') %></p>
				</div>
			</div>
			<p class="article_home_description"><%= truncate(article.content, length: 300) %></p>
			<%= link_to "See More", article %>
		</div>
	<% end %>
</div>

<div class="row home_title_row">
	<div class="col-md-4 home_row">
		<h4 class="home_title">My Comments (<%= current_user.comments.count %>)</h4>
	</div>
</div>

<% current_user.comments.each do |comment| %>
	<h3><%= comment.article.title %></h3>
	<p><%= comment.body %></p>
<% end %>