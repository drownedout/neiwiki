= render 'search'

%h1.page-header Index of NEI Articles

- if user_signed_in?
	%span.btn.btn-primary.pull-right.home-button= link_to "New Article", new_article_path

%br

- @articles.each do |article|
	%h3= link_to article.title, article
	%div.row
		%div.col-md-3
			%p 
			Created on
			= article.created_at.strftime('%b %d, %Y')
		%div.col-md-3
			%p
			Updated on
			= article.updated_at.strftime('%b %d, %Y')
	%p.content-body
		= truncate(article.content, length: 200)
		= link_to "Read more >>", article

= paginate @articles