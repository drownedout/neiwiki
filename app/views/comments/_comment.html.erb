<div class="comment">
	<div class="row">
		<div class="col-md-1">
			<%= link_to image_tag(comment.user.profile_picture.url(:medium), class: "profile_thumbnail user_profile_thumbnail"), user_path(comment.user) %>
		</div>
		<div class="col-md-10">
			<h4 class="comment_name"><%= comment.user.full_name %></h4>
		</div>
	</div> <!-- row -->
	<p class="comment_time"><%= time_ago_in_words(comment.created_at) %> Ago </p>
	<p><%= comment.body %></p>
	<% if current_user.id == comment.user_id %>
		<p><%= link_to 'Delete', [comment.article, comment], method: :delete, data: { confirm: "Are you sure?"} %></p>
	<% end %>
</div>